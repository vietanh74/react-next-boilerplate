{
  "name": "react-next-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:test": "NODE_ENV=test next build",
    "start": "next start",
    "types-check": "tsc --pretty --noEmit",
    "lint:prettier": "prettier --check \"src/**/*+(js|jsx|ts|tsx|scss)\" --ignore-path .gitignore",
    "lint:script": "eslint -c .eslintrc.js \"./src/**/*.{js,ts,tsx}\" --ignore-path .gitignore .",
    "lint:style": "stylelint src/**/*.{css,scss} -i .gitignore -i .stylelintignore",
    "lint": "npm run lint:script && npm run lint:prettier -- --check && npm run lint:style",
    "lintfix": "npm run lint:prettier -- --write && npm run lint:script -- --fix && npm run lint:style -- --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@reduxjs/toolkit": "^1.9.3",
    "antd": "^5.7.0",
    "axios": "^0.27.2",
    "classnames": "^2.3.2",
    "date-fns": "^2.28.0",
    "dompurify": "^3.0.5",
    "json-bigint": "^1.0.0",
    "lodash": "^4.17.21",
    "nanoid": "^4.0.2",
    "next": "^13.4.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.1",
    "redux": "^4.2.0",
    "redux-saga": "^1.2.0",
    "sass": "^1.63.6",
    "tailwindcss": "^3.3.3"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.31",
    "@types/react": "^18.2.15",
    "@types/react-redux": "^7.1.25",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.7",
    "eslint": "^8.45.0",
    "eslint-config-next": "^13.4.10",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.26",
    "prettier": "^2.6.2",
    "stylelint": "^15.6.2",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,scss}": [
      "npm run lint"
    ]
  }
}
